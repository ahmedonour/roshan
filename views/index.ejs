<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Account â€¢  <%= user.username %> | Roshan</title>
		<link rel="stylesheet" href="/css/base.css">
		<link rel="stylesheet" href="/css/index.css">
		<link rel="stylesheet" href="/css/app.css">
		<link rel="shortcut icon" href="/img/favicon-0.png" type="image/png">
		<script src="https://kit.fontawesome.com/8a7299c2d2.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<nav>
			<h1>08827469</h1>
			<div class="logo">
				<a href="/logout"><img src="/img/Roshan-Logo.png" alt=""></a>
			</div>
			<input type="checkbox" name="check" id="check">
			<label for="check">
				<i class="fas fa-ellipsis-v"></i>
			</label>
			<div class="nav-btn">
				<label for="check">
					<i class="fas fa-times-circle"></i>				
				</label>
				<li><a href="/logout">Logout</a></li>
			</div>
		</nav>
		<div class="center">
			
			<section>
				<div class="sidebar">
					<li><button class="chang"><a href="#house-list">My List</a></button></li>
					<li><button class="chang"><a href="#buy">Buy</a></button></li>
					<li><button class="chang"><a href="#rent">Rent</a></button></li>
					<li><button class="chang"><a href="#sell">Sell</a></button></li>
				</div>
				<div class="house-list" id="house-list">
					<h1>House List</h1>
					<ul class="todo-list">
						<% todos.forEach(function(todo) { %>
						<li>
							<form action="<%= todo.url %>" method="post">
								<div class="view">
									<table>
										<thead>
											<th>Location</th>
											<th>For</th>
											<th>Space</th>
											<th>Bathroom</th>
											<th>Bedroom</th>
											<th>Price</th>
										</thead>
										<tbody>
											<td><label ondblclick=""><%= todo.location %> </label></td>
											<td><label ondblclick=""> <%= todo.four %></label></td>
											<td><label ondblclick=""><%= todo.space %> SQRM </label></td>
											<td><label ondblclick=""> <%= todo.bathrooms %></label></td>
											<td><label ondblclick=""><%= todo.bedrooms %> </label></td>
											<td><label ondblclick="">$ <%= todo.price %> SDG</label></td>
										</tbody>
									</table>
								</div>
						</li>
						<% }); %>
					</ul>
					
				</div>
				<div class="house-list" id="buy">
					<h1>Buy</h1>
						<ul class="todo-list">
							<% homes.forEach(function(home) { %>
							<li>
								<form action="<%= home.url %>" method="post">
									<div class="view">
										<table>
											<thead>
												<th>Location</th>
												<th>For</th>
												<th>Space</th>
												<th>Bathroom</th>
												<th>Bedroom</th>
												<th>Price</th>
											</thead>
											<tbody>
												<td><label ondblclick=""><%= home.location %> </label></td>
												<td><label ondblclick=""> <%= home.four %></label></td>
												<td><label ondblclick=""><%= home.space %> SQRM </label></td>
												<td><label ondblclick=""> <%= home.bathrooms %></label></td>
												<td><label ondblclick=""><%= home.bedrooms %> </label></td>
												<td><label ondblclick="">$ <%= home.price %> SDG</label></td>
											</tbody>
										</table>
									</div>
							</li>
							<% }); %>
						</ul>
				</div>
				<div class="house-list" id="rent">
					<h1>Rent</h1>
				</div>
				<div class="house-list" id="sell">
					<h1>Add New House</h1>
					<form action="/addNewHouse" method="POST">
						<input type="text" id="location" name="location" placeholder="Location" autocomplete="location" required>
						<!-- <input type="text" id="for" name="for" placeholder="For" autocomplete="for" required> -->
						<select name="for" id="for">
							<option value="">One Choice</option>
							<option value="Sell">Sell</option>
							<option value="Rent">Rent</option>
						</select>
						<input type="text" id="space" name="space" placeholder="space" autocomplete="space" required>
						<input type="text" id="bathrooms" name="bathrooms" placeholder="bathrooms" autocomplete="bathrooms" required>
						<input type="text" id="bedrooms" name="bedrooms" placeholder="bedrooms" autocomplete="bedrooms" required>
						<input type="text" id="price" name="price" placeholder="price" autocomplete="price" required>
						<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<input type="submit" value="Go">
					</form>
				</div>
			</section>
		</div>
	</body>
</html>

